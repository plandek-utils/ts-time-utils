  "homepage": "https://github.com/plandek-utils/time-utils",
  "license": "MIT",
  "keywords": [],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@types/node": "^22.12.0",
    "@vitest/coverage-v8": "^3.0.4",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "inquirer": "^12.6.1",
    "timekeeper": "^2.3.1",
    "ts-enum-util": "^4.1.0",
